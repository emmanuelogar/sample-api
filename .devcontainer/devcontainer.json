{
    "forwardPorts": [8001, 5000],
  
    "postCreateCommand": "/bin/bash .devcontainer/startup_script.sh",
    "postAttachCommand": "/bin/bash -c 'helm install sample-api ./ci-cd/helm/sample-api -f .devcontainer/dev-values.yaml'",

    "customizations": {
      "vscode": {
        "extensions": [
          "hashicorp.terraform",
          "ms-kubernetes-tools.vscode-kubernetes-tools"
        ]
      }
    },
  
    "hostRequirements": {
      "cpus": 4,
      "memory": "8gb",
      "storage": "32gb"
    }
  }
